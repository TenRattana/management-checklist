{
  "cli": {
    "version": ">=3.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "ENV_FILE": ".env"
      }
    },
    "test": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "ENV_FILE": ".env"
      }
    },
    "production": {
      "distribution": "store",
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "simulator": false
      }
    },
    "preproduction": {
      "distribution": "internal",
      "releaseChannel": "preproduction",
      "env": {
        "ENV_FILE": ".env"
      },
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./path/to/google-service-key.json",
        "track": "production"
      }
    }
  }
}