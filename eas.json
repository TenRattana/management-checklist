{
  "cli": {
    "version": ">=3.0.0"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      },
      "web": {
        "buildCommand": "npm run build",
        "publishCommand": "npm run deploy"
      }
    },
    "test": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "web": {
        "buildCommand": "npm run build",
        "publishCommand": "npm run deploy"
      }
    },
    "production": {
      "distribution": "store",
      "android": {
        "buildType": "aab"
      },
      "ios": {
        "buildType": "app-store"
      },
      "web": {
        "buildCommand": "npm run build",
        "publishCommand": "npm run deploy"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./path/to/google-service-key.json",
        "track": "production"
      },
      "ios": {
        "ascAppId": "your-app-id",
        "appleId": "your-email@example.com"
      }
    }
  }
}